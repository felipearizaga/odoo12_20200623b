<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="supplier_payment_req_form_inherit" model="ir.ui.view">
            <field name="name">supplier.payment.request.inherit.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="jt_supplier_payment.payment_req_form_view"/>
            <field name="priority">20</field>
            <field name="arch" type="xml">
            	<xpath expr="//header/button[@name='action_register']" position="after">
            		<button name="action_draft_budget" string="Draft" class="oe_highlight" type="object" attrs="{'invisible':[('payment_state', 'in', ('draft','paid','cancel'))]}"/>
            		<button name="action_validate_budget" string="Validate budget" class="oe_highlight" type="object" attrs="{'invisible':[('payment_state', '!=', 'registered')]}"/>
            		<button name="action_cancel_budget" string="Cancel" class="oe_highlight" type="object" attrs="{'invisible':[('payment_state', 'in', ('paid','cancel'))]}"/>
            		
            	</xpath>
            
                <field name="workstation_id" position="after">
                    <field name="dependancy_id" context="{'show_for_supplier_payment':True}" attrs="{'readonly':[('payment_state', '!=', 'draft')]}"/>
                    <field name="sub_dependancy_id" context="{'show_for_supplier_payment':True}" attrs="{'readonly':[('payment_state', '!=', 'draft')]}"/>
                </field>
                <field name="administrative_secretary_id" position="attributes">
                	<attribute name="domain">[('dependancy_id','=',dependancy_id)]</attribute>
                </field>
                <field name="holder_of_dependency_id" position="attributes">
                	<attribute name="domain">[('dependancy_id','=',dependancy_id)]</attribute>
                </field>
                
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='type_of_bussiness_line']"
                       position="before">
                    <field name="program_code_id" domain="[('budget_id.state','=','validate')]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>