<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

      <record id="view_generate_bank_layout" model="ir.ui.view">
            <field name="name">generate.bank.layout.view</field>
            <field name="model">generate.bank.layout</field>
            <field name="arch" type="xml">
                <form string="Generate Bank Layout">
                    <group>
                    	<field name="journal_id" required="1" domain="[('bank_format','!=',False)]" options="{'no_open': True, 'no_create': True}"/>
                    	<field name="payment_ids" invisible="1"/>
                    	<field name="file_name" invisible="1"/>
                    	<field name="file_data" readonly="1" filename="file_name" attrs="{'invisible':[('file_data','=',False)]}"/>
                    </group>
                    <footer>
                        <button string="Generate" name="generate_bank_layout" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

	 <!--  View for payroll payment bank layout -->
      <record id="view_generate_payroll_payment_bank_layout" model="ir.ui.view">
            <field name="name">generate.payroll.bank.layout.view</field>
            <field name="model">generate.bank.layout</field>
            <field name="arch" type="xml">
                <form string="Generate Bank Layout">
                    <group>
                    	<field name="journal_id" required="1" domain="[('payroll_bank_format','!=',False)]" options="{'no_open': True, 'no_create': True}"/>
                    	<field name="payment_ids" invisible="1"/>
                    	<field name="file_name" invisible="1"/>
                    	<field name="file_data" readonly="1" filename="file_name" attrs="{'invisible':[('file_data','=',False)]}"/>
                    </group>
                    <footer>
                        <button string="Generate" name="generate_payroll_payment_bank_layout" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
            
       <record id="action_generate_bank_layout_payment" model="ir.actions.server">
            <field name="name">Generate Bank Layout</field>
            <field name="model_id" ref="jt_supplier_payment.model_generate_bank_layout"/>
            <field name="binding_model_id" ref="account.model_account_payment"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                action = model.action_generate_bank_layout()
            </field>
        </record>
	</data>
</odoo>